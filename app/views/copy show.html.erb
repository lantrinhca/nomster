<div class="booyah-box col-xs-10 col-xs-offset-1">
	<h1><%= @place.name %></h1>
	<i><%= @place.address %></i>
	<br/><br/>
	<p><%= @place.description %></p>

	<% if @place.latitude.present? && @place.longitude.present? %>
	  <script src="https://maps.googleapis.com/maps/api/js?v=3.exp&signed_in=true"></script>
		  <script>
				function initialize() {
				  var myLatlng = new google.maps.LatLng(<%= @place.latitude %>, <%= @place.longitude %>);
	        var mapOptions = {
				    zoom: 12,
				    center: myLatlng
			  }
				  var map = new google.maps.Map(document.getElementById('map-canvas'), mapOptions);

				  var marker = new google.maps.Marker({
				      position: myLatlng,
				      map: map,
				      title: 'Hello World!'
				  });
				}
			google.maps.event.addDomListener(window, 'load', initialize);
	  </script>
  	<div id="map-canvas"></div>
	<% end %>

	<br>
	<div class="pull-right">
		<button class="btn btn-primary" data-toggle="modal" data-target="#myModalPhoto">
		  Add a photo
		</button>
		<% if current_user && current_user == @place.user %>
    	<%= link_to 'Edit', edit_place_path(@place), :class => 'btn btn-primary' %>
    	<%= link_to 'Destroy', place_path(@place), :method => :delete, :data => {:confirm => 'Are you sure you want to delete this?'},:class => 'btn btn-danger' %>
		<% end %>
  </div>

	<!--  <% @place.photos.each do |photo| %>
		<h3><%= photo.caption %>	</h3>
		<%= image_tag photo.picture, size:'320x320' , :class => 'img-responsive fancybox' %>
	<% end %> -->
</div>

<div class="clear"></div>
<div class="col-xs-10 col-xs-offset-1">
	<h1 class="pull-left">Comments</h1>

	<!-- Button trigger modal -->
	<div class="btn-toolbar">
		<button class="btn btn-primary btn-lg pull-right" data-toggle="modal" data-target="#myModal">
		  Add a comment
		</button>
	</div>
</div>

<%= render 'places/addComment' %>
<%= render 'places/addPhoto' %>

<div class="clear"></div>
<% @place.comments.each do |comment| %>
	<div class="col-xs-12 col-sm-6">
		<blockquote>
			<% d comment.humanized_rating.present? %>
				<b><%= comment.rating %></b> -
			<% end %>
			<%= comment.message %>
			<small><%= comment.user.email %></small>
		</blockquote>
	</div>
<% end %>

<div class="clear"></div>
<!-- draw box only if photos present -->
<% if @place.photos.present? %>
	<div class="booyah-box col-xs-10 col-xs-offset-1">
	<section id="photos">
		<% @place.photos.each do |photo| %>
			<h3><%= photo.caption %>	</h3>
			<%= image_tag photo.picture , :class => 'img-responsive'%>
			<hr>
		<% end %>
	</section>
<% end %>
</div>

